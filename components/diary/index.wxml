<!--components/diary/index.wxml-->
<view class="rijiv" bindtap="godetail">
  <image src="{{cover}}" class="cover" mode="aspectFit"></image>
  <view class="title">{{title}}</view>
  <view class="date">{{date}}</view>
  <view class="userv">
    <view class="linfo">
      <image src="{{avatarUrl}}" mode="aspectFit" class="tximg"></image>
      <view class="name">{{nickName}}</view>
    </view>
    <view class="rdata">
      <image src="/resources/zan.png" class="zanicon"></image>
      <view class="zannum">{{zannum}}</view>
    </view>
  </view>
</view>
