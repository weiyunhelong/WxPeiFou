/* pages/user/index.wxss */

/*头像信息部分*/

.topv {
  display: flex;
  margin: 0 22rpx 30rpx 22rpx;
  border-bottom: 1rpx solid #bbb;
  padding: 14rpx 0;
}

.tximg {
  width: 200rpx;
  height: 200rpx;
  margin: 0 52rpx 0 26rpx;
  border-radius: 100rpx;
}

.userinfo {
  width: 450rpx;
}

.nickname {
  font-size: 56rpx;
  color: #ff9800;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  font-size: 32rpx;
  color: #adaeae;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tipt {
  font-size: 24rpx;
  color: #adaeae;
  padding-top: 70rpx;
}

.tip {
  font-size: 24rpx;
  color: #adaeae;
}

/*联系方式*/

.concatv {
  margin: 0 22rpx;
  border-bottom: 1rpx solid #bbb;
  padding: 0 26rpx 30rpx;
}

.title {
  font-size: 30rpx;
  color: #101010;
  margin: 30rpx 0 26rpx;
}

.infov {
  font-size: 28rpx;
  color: #646464;
}

.infocv {
  font-size: 28rpx;
  color: #646464;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*历史发布*/

.lishit {
  padding: 30rpx 48rpx;
  font-size: 32rpx;
  color: #101010;
}

.actobjv {
  padding: 0 48rpx 30rpx 48rpx;
  display: flex;
}

.txicon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.actinfov {
  width: 530rpx;
}

.acttitle {
  font-size: 28rpx;
  color: #101010;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.actdate {
  margin: 5rpx 0 15rpx 0;
  font-size: 20rpx;
  color: #ccc9c5;
}

.acticon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.actoptv {
  display: flex;
}

.acticonv {
  display: flex;
  font-size: 16rpx;
  color: #ff9800;
  line-height: 30rpx;
  margin-right: 20rpx;
}
