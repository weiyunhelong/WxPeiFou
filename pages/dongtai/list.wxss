/* pages/dongtai/list.wxss */

/*头像信息部分*/

.topv {
  display: flex;
  margin: 0 22rpx;
  border-bottom: 1rpx solid #bbb;
  padding: 14rpx 0;
}

.tximg {
  width: 200rpx;
  height: 200rpx;
  margin: 0 52rpx 0 26rpx;
  border-radius: 100rpx;
}

.userinfo {
  width: 450rpx;
}

.nickname {
  font-size: 56rpx;
  color: #ff9800;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  font-size: 32rpx;
  color: #adaeae;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tipt {
  font-size: 24rpx;
  color: #adaeae;
  padding-top: 70rpx;
}

.tip {
  font-size: 24rpx;
  color: #adaeae;
}
/*动态部分*/

.diaryv {
  display: flex;
  width: 100vw;
}

.leftv {
  margin: 0 14rpx 0 24rpx;
}
