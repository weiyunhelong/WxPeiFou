/* pages/dongtai/index.wxss */

.slide-image {
  width: 100vw;
}

.userinfov {
  display: flex;
  padding: 32rpx 0rpx;
  border-bottom: 1rpx solid #cbcbcb;
  margin: 0 25rpx;
}

.tximg {
  width: 146rpx;
  height: 146rpx;
  margin-right: 28rpx;
  border-radius: 100rpx;
}

.userinfo {
  width: 550rpx;
}

.nickname {
  font-size: 56rpx;
  color: #ff9800;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  font-size: 32rpx;
  color: #adaeae;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tipt {
  font-size: 24rpx;
  color: #adaeae;
  padding-top: 70rpx;
}

.tip {
  font-size: 24rpx;
  color: #adaeae;
}

.titlev {
  color: #646464;
  font-size: 32rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #cbcbcb;
  margin: 0 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 108rpx;
}

.infov {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #cbcbcb;
  margin: 0 25rpx;
}

.infotitle {
  font-size: 28rpx;
  color: #101010;
  margin-bottom: 26rpx;
}

.infot {
  font-size: 24rpx;
  color: #646464;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
}

.wxuser {
  width: 180rpx;
  height: 180rpx;
  margin-top: 8rpx;
}

/*用户评价*/

.showcomments {
  width: 700rpx;
  height: 60rpx;
  border-radius: 4rpx;
  background-color: #fff;
  text-align: center;
  border: 1rpx solid #ff9800;
  font-size: 28rpx;
  color: #ff9800;
  margin: 24rpx auto;
  line-height: 62rpx;
}

.bottomvv {
  width: 100vw;
  height: 80rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.bottomv {
  width: 100vw;
  height: 80rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 99;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  justify-content: space-around;
}

.optv{
  display: flex;
  background: #fff;
  margin: 0;
  padding: 0;
  border: 0;
  justify-content: center;
  font-size: 36rpx;
  color: #ff9800;
  line-height: 80rpx;
}
.optv::after{
  margin: 0;
  padding: 0;
  border: 0;
}
.opticon{
  width: 36rpx;
  height: 36rpx;
  margin: 22rpx 10rpx;
}
.linev{
  width: 2rpx;
  height: 52rpx;
  margin: 14rpx 0;
  background: #ff9800;
}