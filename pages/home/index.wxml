<!--index.wxml-->
<!--展示的数据-->
<block wx:if="{{blockid==0}}">
  这里是首页A
  
  <calendar calendar="{{calendar}}" gesture="{{gesture}}" bindtapChange="getcalendar"></calendar>

</block>
<block wx:if="{{blockid==1}}">
  这里是首页B

  <slideview buttons="{{slideButtons}}" bindbuttontap="ndelopt" data-id="1">
    <view class="delv">滑动删除</view>
  </slideview>

</block>
<block wx:if="{{blockid==2}}">
  这里是首页C

  <searchbar bindblur="getsearchkey" />
</block>

<block wx:if="{{blockid==3}}">
  这里是首页D

  <!--条款隐私-->
<policycom receiveData="{{policyobj}}" bindonchange="closepolicy" />
</block>

<!--tabbar-->
<tabbar tabbarData="{{tabbar}}" active="{{0}}" bgcolor="{{bgcolor}}" color="{{color}}" selectedColor="{{selectedColor}}" showborder="{{showborder}}" bind:tapChange="tabbarChange" />